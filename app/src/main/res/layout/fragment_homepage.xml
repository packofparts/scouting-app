<?xml version="1.0" encoding="utf-8"?>
<com.example.myapplication.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThirdFragment">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:padding="0dp"
        android:background="@drawable/red_light"
        android:id="@+id/relativeLayoutFirst">


        <TextView
            android:id="@+id/characterLimit"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="Character Limit: 0/150"
            android:textSize="15dp"
            android:translationX="30dp"
            android:translationY="635dp" />
        <TextView
            android:id="@+id/analyzerScore"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="Analyzer Score: 0.0"
            android:textSize="15dp"
            android:translationX="200dp"
            android:translationY="635dp" />
        <TextView
            android:id="@+id/notesTitle"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textSize="24dp"
            android:translationX="45dp"
            android:translationY="560dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:shadowColor="@color/black" />

        <Button
            android:id="@+id/textbacking1"
            android:layout_width="378dp"
            android:layout_height="49dp"
            android:backgroundTint="#D9D9D9"
            android:clickable="false"
            android:tag=""
            android:text=""
            android:translationX="17dp"
            android:translationY="589dp"
            app:cornerRadius="20dp" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:hint="Enter Here"
            android:textColor="#000000"
            android:textColorHint="#71797E"
            android:maxLength="150"
            android:inputType="text"
            android:translationX="45dp"
            android:translationY="588dp"
            android:tag="@string/no_change"/>
        <Button
            android:id="@+id/bg1"
            android:layout_width="430dp"
            android:layout_height="80dp"
            android:backgroundTint="#E48B92"
            android:text=""
            android:clickable="false"
            android:translationX="0dp"
            android:translationY="655dp"
            app:cornerRadius="15dp"
            android:tag="@string/bg1"/>

        <Button
            android:id="@+id/bg2"
            android:layout_width="378dp"
            android:layout_height="50dp"
            android:backgroundTint="#5cffffff"
            android:text=""
            android:clickable="false"
            android:translationX="17dp"
            android:translationY="670dp"
            app:cornerRadius="20dp"
            android:tag="@string/bg2"/>

        <TextView
            android:id="@+id/bottomTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Red 1"
            android:textSize="36dp"
            android:textColor="#ff0000"
            android:translationX="159dp"
            android:translationY="669dp"
            android:textStyle="bold"
            android:tag="@string/team"/>

        <Button
            android:id="@+id/cont"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="Next"
            android:translationY="669.5dp"
            android:translationX="285dp"
            app:cornerRadius="20dp"
            android:backgroundTint="#E02E3C"
            android:textColor="@color/white"
            android:shadowRadius="10"
            android:shadowDy="5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:tag="@string/team"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:translationX="140dp"
            android:translationY="35dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Pit Scouting"
            android:textStyle="bold"
            android:shadowDy="5"
            android:shadowColor="@color/black"
            android:shadowRadius="10"
            android:textSize="40sp"
            android:tag="@string/no_change"/>


        <ImageView
            android:id="@+id/pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotationX="360"
            android:src="@drawable/pop"
            android:translationX="0dp"
            android:translationY="0dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


        <TextView
            android:id="@+id/team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team "
            android:textColor="@color/white"
            android:textSize="26dp"
            android:textStyle="bold"
            android:translationX="140dp"
            android:translationY="85dp"
            android:tag="@string/no_change"/>

        <Button
            android:id="@+id/back"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="Back"
            android:translationX="17dp"
            android:translationY="669.5dp"
            android:textColor="@color/white"
            app:cornerRadius="20dp"
            android:backgroundTint="#E02E3C"
            android:shadowRadius="10"
            android:shadowDy="5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:tag="@string/team"/>


    </RelativeLayout>
</com.example.myapplication.CustomScrollView>
