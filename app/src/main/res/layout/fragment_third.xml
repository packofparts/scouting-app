<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment">

    <RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="730dp"
    android:padding="0dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="40dp"
        android:translationY="470dp"
        android:text="Notes in Speaker"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/numNotes"
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:translationX="75dp"
        android:translationY="520dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="26dp" />


    <Button
        android:id="@+id/toSecondFragment"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:translationX="230dp"
        android:translationY="650dp"
        android:backgroundTint="#73C2F0"
        android:text="Next" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="26dp"
        android:translationY="170dp"
        android:text="Move out of zone?"
        android:textSize="26dp"
        android:trackTintMode="src_over"
        android:thumbTintMode="src_in"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="252dp"
        android:layout_height="47dp"
        android:translationX="140dp"
        android:translationY="38dp"
        android:textAlignment="center"
        android:text="Autonomous"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="40dp"
        android:translationY="280dp"
        android:text="Notes in Amp"
        android:textSize="26dp" />



    <TextView
        android:id="@+id/numNotesInAmp"
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:translationX="75dp"
        android:translationY="330dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="26dp" />

    <ImageView
        android:id="@+id/pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="5dp"
        android:translationY="5dp"
        android:src="@drawable/pop" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="200dp"
        android:translationY="85dp"
        android:text="team "
        android:textSize="26dp" />

    <Button
        android:id="@+id/toHomePage"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:translationX="15dp"
        android:translationY="650dp"
        android:backgroundTint="#73C2F0"
        android:text="Previous" />

    <Button
        android:id="@+id/plusSpeaker"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:translationX="165dp"
        android:translationY="520dp"
        android:backgroundTint="#73C2F0"
        android:text="+"
        android:textSize="26dp" />

    <Button
        android:id="@+id/minusSpeaker"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:translationX="15dp"
        android:translationY="520dp"
        android:backgroundTint="#73C2F0"
        android:text="-"
        android:textSize="26dp" />

    <Button
        android:id="@+id/plusAmp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:translationX="165dp"
        android:translationY="330dp"
        android:backgroundTint="#73C2F0"
        android:text="+"
        android:textSize="26dp" />
    <Button
        android:id="@+id/minusAmp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:translationX="15dp"
        android:translationY="330dp"
        android:backgroundTint="#73C2F0"
        android:text="-"
        android:textSize="26dp" />

    <ImageView
        android:id="@+id/SPEAKER"
        android:layout_width="127dp"
        android:layout_height="124dp"
        android:src="@drawable/speaker"
        android:translationX="260dp"
        android:translationY="470dp" />
    <ImageView
        android:id="@+id/AMP"
        android:layout_width="127dp"
        android:layout_height="124dp"
        android:src="@drawable/amp"
        android:translationX="260dp"
        android:translationY="280dp"/>
</RelativeLayout>
    </androidx.core.widget.NestedScrollView>
